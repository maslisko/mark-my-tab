{
  "manifest_version": 2,
  "name": "Mark My Tab",
  "version": "1.0",
  "description": "Marks tabs with a badge of a predefined color",
  "homepage_url": "https://github.com/maslisko/mark-my-tab",
  "icons": {
    "48": "icons/markMyTab-48.png",
    "256": "icons/markMyTab-256.png"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "menus",
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": ["badger.js", "background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mark-my-tab@maslisko"
    }
  }
}